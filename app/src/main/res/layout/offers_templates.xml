<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center_vertical">

    <TextView
        android:text="معلومات العرض يكتبها صاحب المحل"
        android:layout_width="match_parent"
        android:id="@+id/offer_description"
        android:layout_weight="0.26"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:padding="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="292dp"
        app:srcCompat="@drawable/family_offer"
        android:id="@+id/offer_image_temp"
        android:scaleType="fitXY" />
    <Button
        android:text="@string/order_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offer_order_buttom"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp" />
</LinearLayout>
